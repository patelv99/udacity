<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_recipe_detail_servings"
            style="@style/BlueHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_side_padding"
            android:layout_marginStart="@dimen/layout_side_padding"
            android:layout_marginTop="@dimen/layout_side_padding"
            android:text="@string/serves"/>

        <TextView
            android:id="@+id/fragment_recipe_detail_ingredients_header"
            style="@style/BlueHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_side_padding"
            android:layout_marginStart="@dimen/layout_side_padding"
            android:layout_marginTop="10dp"
            android:text="@string/ingredients"/>

        <TextView
            android:id="@+id/fragment_recipe_detail_ingredients"
            style="@style/BlackDetailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_side_padding"
            android:layout_marginStart="@dimen/layout_side_padding"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/fragment_recipe_detail_steps_header"
            style="@style/BlueHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_side_padding"
            android:layout_marginStart="@dimen/layout_side_padding"
            android:layout_marginTop="10dp"
            android:text="@string/steps"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_recipe_detail_steps_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_side_padding"
            android:layout_marginEnd="@dimen/layout_side_padding"
            android:layout_marginStart="@dimen/layout_side_padding"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>