<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_recipe_detail_ingredients_header"
        style="@style/BlackHeaderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_side_padding"
        android:layout_marginStart="@dimen/layout_side_padding"
        android:layout_marginTop="@dimen/layout_side_padding"
        android:text="@string/ingredients"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/fragment_recipe_detail_ingredients"
        style="@style/BlackDetailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_side_padding"
        android:layout_marginStart="@dimen/layout_side_padding"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_recipe_detail_ingredients_header"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_recipe_detail_steps_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_side_padding"
        android:layout_marginStart="@dimen/layout_side_padding"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_recipe_detail_ingredients"/>

</android.support.constraint.ConstraintLayout>