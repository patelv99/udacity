<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/navy_blue</item>
        <item name="colorAccent">@color/accent_red</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="MainTitle">
        <item name="android:textSize">@dimen/main_title_text</item>
        <item name="android:textColor">@color/primary_blue</item>
    </style>

    <style name="MainDetail">
        <item name="android:textSize">@dimen/main_detail_text</item>
        <item name="android:textColor">@color/navy_blue</item>
    </style>

    <style name="DetailTitle">
        <item name="android:textSize">@dimen/detail_title_text</item>
        <item name="android:textColor">@color/primary_blue</item>
    </style>

    <style name="DetailSubTitle">
        <item name="android:textSize">@dimen/detail_subtitle_text</item>
        <item name="android:textColor">@color/navy_blue</item>
    </style>

    <style name="DetailBody">
        <item name="android:textSize">@dimen/detail_body_text</item>
        <item name="android:textColor">@color/navy_blue</item>
    </style>

    <style name="WidgetTitle">
        <item name="android:textSize">@dimen/widget_title_text</item>
        <item name="android:textColor">@color/primary_blue</item>
    </style>

    <style name="WidgetDetail">
        <item name="android:textSize">@dimen/widget_detail_text</item>
        <item name="android:textColor">@color/primary_blue</item>
    </style>

</resources>
