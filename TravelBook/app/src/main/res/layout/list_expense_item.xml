<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_expense_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/expense_item_datetime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/expense_item_amount"
        style="@style/DetailBody"/>

    <TextView
        android:id="@+id/expense_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expense_item_datetime"
        app:layout_constraintEnd_toStartOf="@id/expense_item_amount"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/DetailSubTitle"/>

    <TextView
        android:id="@+id/expense_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/expense_item_title"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/DetailSubTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>